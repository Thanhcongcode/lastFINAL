
@model PagedList.IPagedList<do_an_cuoi_ky.Models.MOHINH>
@using PagedList.Mvc;
@using System.Globalization;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    table {
        border-collapse: collapse;
        width: 90%;
        margin: auto;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    tr:nth-child(even) {
        background-color: #b2b2b2ff
    }

    tr:hover {
        background-color: coral;
    }

    th {
        background-color: #2a9fd6;
        color: black;
        font-weight: 900;
    }

    td {
        color: black;
    }
</style>


<h2 style="margin-left:10px; font-weight:900">Quản lý Nhà Sản Xuất </h2>

<p>Move the mouse over the table rows to see the effect.</p>

<table>
    <tr>
        <th>Mã Mặt Hàng</th>
        <th>Tên Mặt Hàng</th>
        <th>Mô tả</th>
        <th>Giá</th>
        <th>Hình</th>
        <th>Mã Chủ Đề</th>
        <th>Mã Nhà Sản Xuất</th>

        <th colspan="3">
            <a href="@Url.Action("Create","NhaSanXuat")"><img src="~/Asset/img/AddNSX.png" style="margin-left:25%" /></a>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.MaMH) </td>
            <td> @Html.DisplayFor(modelItem => item.TenMH) </td>
            <td> @Html.DisplayFor(modelItem => item.MoTa) </td>
            <td> @Html.DisplayFor(modelItem => item.DonGia) </td>
            <td> @Html.DisplayFor(modelItem => item.HinhMinhHoa)</td>
            <td> @Html.DisplayFor(modelItem => item.MaCD)</td>
            <td> @Html.DisplayFor(modelItem => item.MaNSX)</td>
            <td>
                <a href="@Url.Action("Edit","NhaSanXuat", new { id=item.MaMH})">
                    <img src="~/Asset/img/EditNSX.png" />
                </a>
            </td>

            <td>
                <a href="@Url.Action("Details","NhaSanXuat", new { id=item.MaMH})"><img src="~/Asset/img/DetailNSX.png" /></a>
            </td>
            <td>
                <a href="@Url.Action("Delete","NhaSanXuat", new { id=item.MaMH})">
                    <img src="~/Asset/img/DeleteNSX (2).png" />
                </a>
            </td>
        </tr>
    }

</table>
<div class="row" >
    <div class="col-md-12">
        <div class="product-pagination text-center">
            <nav>
                <ul class="pagination">
                    <li style="color:dodgerblue;font-size:small;font-weight:bold;margin-left:20px;">
                        <!-- Thêm phân trang vào -->
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        <!-- Kết thúc -->
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

