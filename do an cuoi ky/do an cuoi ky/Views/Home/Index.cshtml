                                    </div>
                                </div>

                                <h2><a href="@Url.Action("Details", "Shop", new { id = mohinh.MaMH })" style="font-family:inherit; color:aliceblue">@mohinh.TenMH</a></h2>

                                <div class="product-carousel-price">
                                    <ins>@mohinh.DonGia đ</ins> <del>$100.00</del>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






