@model PagedList.IPagedList<do_an_cuoi_ky.Models.MOHINH>
@using PagedList.Mvc;

@{ ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_MasterLayout.cshtml"; }


<body>
    <!-- End mainmenu area -->

    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>SẢN PHẨM</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="brands-area" style="text-align: center; margin: 0 auto">
        <div class="zigzag-bottom"></div>
        <div class="container" style="text-align: center; margin: 0 auto">
            <div style="display:inline-block;text-align:center;margin : 0 auto;resize:horizontal">
                @Html.Action("LayChuDe", "Shop")
            </div>
        </div>
    </div>
    <div class="maincontent-area">
        <div class="single-product-area">
            <div class="zigzag-bottom"></div>
            <div class="container">


                @foreach (var mohinh in Model)
                {
    <div class="col-md-3 col-sm-6">
        <div class="single-shop-product" B style="display:inline-block">
            <a href="@Url.Action("Details", "Shop", new { id = mohinh.MaMH })"><img src="~/Asset/img/@mohinh.HinhMinhHoa" class="my-img-size" style="width:auto;height:200px" /> </a>

            <h2><a href="@Url.Action("Details", "Shop", new { id = mohinh.MaMH })" style="font-family:inherit; color:aliceblue">@mohinh.TenMH</a></h2>

            <div class="product-shop-price">@mohinh.DonGia</div>
        </div>
    </div>}

                <div class="row">
                    <div class="col-md-12">
                        <div class="product-pagination text-center">
                            <nav>
                                <ul class="pagination">
                                    <li style="color:white;font-size:small;font-weight:bold;background-color:black">
                                        <!-- Thêm phân trang vào -->
                                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                                        <!-- Kết thúc -->
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>





    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="js/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="js/main.js"></script>
</body>


